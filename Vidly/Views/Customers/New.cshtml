@model Vidly.ViewModel.NewCustomerViewModel

@using(@Html.BeginForm("Create","Customers"))
{
<div class="form-group">
    @Html.LabelFor(m => m.CurrentCustomer.Name)
    @Html.TextBoxFor(m => m.CurrentCustomer.Name, new { @class ="form-control"})
    @Html.ValidationMessageFor(m => m.CurrentCustomer.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.CurrentCustomer.BirthDate)
        @Html.TextBoxFor(m => m.CurrentCustomer.BirthDate,"{0:d MMM yyyy}", new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.CurrentCustomer.SubscribeToNewsLetter)
        @Html.CheckBoxFor(m => m.CurrentCustomer.SubscribeToNewsLetter)     
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.CurrentCustomer.MembershipTypeId)
        @Html.DropDownListFor(m => m.CurrentCustomer.MembershipTypeId, new SelectList(@Model.MembershipTypes, "Id", "Name"), "Select Membership Type", new { @class = "form-control" })

        </div>

        <button type="submit" class="btn btn-primary">Save</button>
        }

@section scripts
{
  @Scripts.Render("~/bundles/jqueryval")  
}
